{
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",

		"moduleResolution": "Node",
		"target": "ES6",
		"module": "CommonJS",
		"lib": ["ES6"],

		"removeComments": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"strict": true
	},
	"include": ["src"],
	"exclude": ["_/", "**/*test.ts"]
}
